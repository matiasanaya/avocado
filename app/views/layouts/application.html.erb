<!DOCTYPE html>
<html>
<head>
  <title>Avocado</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if signed_in? %>
	Signed in as <%= current_user.name %>
<% else %>
	Not Signed in
<% end %>

<% flash.each do |key, value| %>
	<div class="alert alert-<%= key %>"><%= value %></div>
<% end %>

<%= yield %>

</body>
</html>

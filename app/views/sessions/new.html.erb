<% provide(:title, "Sign in") %>
<div class="row">
  <div class="span6 offset3">
    <div class="hero-unit" style="background-color:#1ABC9C;color:white;">
      <h1>Sign in</h1>
      <br \>
      <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit 'Sign in', :class => 'btn btn-success btn-large btn-block', style: 'margin-top:5%;' %>
      <% end %>

      <p>New user? <%= link_to "Sign up now!", signup_path, style: 'color: white;text-decoration: none;' %></p>
    </div>
  </div>
</div>
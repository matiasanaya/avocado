<div class="cardrow" style="padding-left:7%;padding-right:5%;">
  <div id="prop<%= prop.id %>_accordion">
    <a data-toggle="collapse" data-parent="#actions_accordion" href="#prop_actions<%= prop.id %>" style="color:grey;text-decoration:none;">
      <div class="row-fluid">
        <div class="align-center side-icon">
          <h1 class="social-off" style="float:left;"><i class="icon-<%= prop.icon %>"></i></h1>
        </div>
        <h3 class="lead break-word" style="margin-left:20%;margin-top:17px;">
          <%= prop.v %>
        </h3>
      </div>
    </a>
  </div>
  <% if prop.id %>
    <div class="row-fluid" style="padding:0">
      <div id="prop_actions<%= prop.id %>" class="collapse">
        <div class="span6">
          <%= link_to  'edit', edit_simple_property_path(prop.id), :class => 'btn btn-large btn-block', style: 'margin-top:10px;margin-bottom:10px;' unless !prop.id %>
        </div>
        <div class="span6">
          <%= link_to  'delete', simple_property_path(prop.id), :confirm => "are you sure?", :method => :delete, :class => 'btn btn-large btn-danger btn-block', style: 'margin-top:10px;margin-bottom:10px;' unless !prop.id %>
        </div>
      </div>
    </div>
  <% end %>
</div>
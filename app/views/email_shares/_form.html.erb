<div class="cardrow" style="padding-left:7%;padding-right:5%;">
  <div class="row-fluid" style="padding-top:5%;">
    <%= form_for(@email_share) do |f| %>
      <%= render 'shared/error_messages', subject: @user %>
      <%= f.text_field :email, placeholder: 'Email address', :style => 'width:70%;margin-top:10px;height:35px;' %>
      <%= f.hidden_field :card_id, value: card.id %>
      <%= f.submit "share", :class => "btn", :style => 'width:25%;height:45px;' %>
    <% end %>
  </div>
</div>
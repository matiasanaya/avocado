<% provide(:title, @user.name) %>
<ul>
  <% @user.cards.each do |card| %>
    <div class="span3 offset1">
      <%= link_to 'View Shares', cards_path(card) %>
      <h2 class="sub-header"><%= card.use_case %></h2>
      <% card.simple_properties.each do |prop| %>
      	<li><%= "#{prop.k}: #{prop.v}" %></li>
      <% end %>
      <%= form_for(@email_share) do |f| %>
        <%= render 'shared/error_messages', subject: @user %>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <%= f.hidden_field :card_id, value: card.id %>
        <%= f.submit "Share", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
  <% end %>
</ul>